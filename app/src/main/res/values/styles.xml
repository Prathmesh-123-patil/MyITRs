<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>       <!-- toolbar / main elements -->
        <item name="colorPrimaryDark">@color/blue_700</item>   <!-- status bar -->
        <item name="colorAccent">@color/blue_accent</item>     <!-- buttons, spinners, highlights -->
    </style>

    <style name="DashboardButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">#6200EE</item>
        <item name="android:buttonCornerRadius">28dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>


</resources>